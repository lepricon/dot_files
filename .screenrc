# Change scrollback to 10000 lines
defscrollback 10000
shell bash

# status line at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string "%{d}%{.bW}%-w%{.rW}%f%n %t%{-}%+w %=%{..G}[%H %l] %{..Y} %m/%d %c "

# allow scrollback to work in terminal programs (like putty)
termcapinfo xterm ti@:te@

# turn fragen flickering off!!
vbell off

altscreen on

bindkey "^A^[OA" focus up
bindkey "^A^[OB" focus down
bindkey "^A^[OC" focus right
bindkey "^A^[OD" focus left
